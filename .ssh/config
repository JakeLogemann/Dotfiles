# User SSH Client Config
# ======================
#
# vim: ts=2 sw=2 et noai noci si
Host github.com
  BatchMode yes
  Port 22
  User git
  IdentityFile ~/.ssh/github
  HostKeyAlgorithms rsa-sha2-512

Host gitlab.com
  BatchMode yes
  Port 22
  User git
  IdentityFile ~/.ssh/id_ecdsa


# These devices are picky about their configuration.
Host 192.168.0.*
  IdentitiesOnly yes
  HostKeyAlgorithms ssh-rsa
  ControlMaster no
  Ciphers aes256-ctr
  MACs hmac-sha1
  Port 22

# Default Settings :: Keep these last.
Host *
  AddKeysToAgent yes
  Compression no
  ConnectTimeout 15
  ConnectionAttempts 2
  ControlMaster no
  ControlPath ~/.ssh/mux/%r@%h:%p
  ControlPersist 1 
  ForwardAgent no
  ForwardX11 no
  ForwardX11Trusted no
  HostbasedAuthentication yes
  IPQoS reliability
  IdentitiesOnly no
  LogLevel INFO
  PermitLocalCommand no
  Port 22
  ServerAliveCountMax 25
  ServerAliveInterval 5
  Ciphers chacha20-poly1305@openssh.com
  MACs hmac-sha2-256-etm@openssh.com,hmac-sha2-512-etm@openssh.com
  HostKeyAlgorithms ecdsa-sha2-nistp521,ecdsa-sha2-nistp521-cert-v01@openssh.com,ecdsa-sha2-nistp384,ecdsa-sha2-nistp384-cert-v01@openssh.com,ecdsa-sha2-nistp256,ecdsa-sha2-nistp256-cert-v01@openssh.com
  TcpKeepAlive no
  User root

